#!/bin/sh

exists () {
  type "$1" >/dev/null 2>/dev/null
}

# base path to user service directory
if [ "root" = $(whoami) ]; then
    SV_BASE="/sv"
else
    SV_BASE="${HOME}/sv"
fi

if exists "runsvdir"; then
    sh -c "runsvdir -P ${SV_BASE} '........................................................................................................................................................................................................................................................................................' &"
fi
